# Lead List Orchestrator - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# REQUIRED: Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your-supabase-api-key

# ============================================
# REQUIRED: N8N Webhook Endpoints
# ============================================
DISCOVERY_WEBHOOK=https://your-n8n-instance.com/webhook/discovery
ENRICHMENT_WEBHOOK=https://your-n8n-instance.com/webhook/enrichment
CONTACT_WEBHOOK=https://your-n8n-instance.com/webhook/contact
EMAIL_VERIFICATION_WEBHOOK=https://your-n8n-instance.com/webhook/verify

# ============================================
# REQUIRED: HubSpot Configuration
# ============================================
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_COMPANIES_LIST_ID=your-companies-list-id
HUBSPOT_CONTACTS_LIST_ID=your-contacts-list-id

# ============================================
# REQUIRED: Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=Lead Generator <your-email@gmail.com>
NOTIFY_EMAIL=recipient@example.com
FAILSAFE_EMAIL=failsafe@example.com
OWNER_EMAIL=owner@example.com

# ============================================
# OPTIONAL: Pipeline Configuration
# ============================================
# Discovery timeout in seconds (default: 90)
DISCOVERY_REQUEST_TIMEOUT=90

# Number of parallel enrichment workers (default: 10)
ENRICHMENT_CONCURRENCY=10

# Number of parallel contact workers (default: 20)
CONTACT_CONCURRENCY=20

# Seconds before marking request as stale (default: 3600)
REQUEST_PROCESSING_STALE_SECONDS=3600

# Maximum top-up rounds (default: 3)
TOPUP_MAX_ROUNDS=3

# ============================================
# OPTIONAL: Contact Quality Requirements
# ============================================
# Minimum anecdotes required (defaults shown)
CONTACT_MIN_PERSONAL_ANECDOTES=1
CONTACT_MIN_PROFESSIONAL_ANECDOTES=2
CONTACT_MIN_TOTAL_ANECDOTES=3

# Fallback strategies (true/false)
CONTACT_ALLOW_PERSONALIZATION_FALLBACK=true
CONTACT_ALLOW_SEED_URL_FALLBACK=true

# ============================================
# OPTIONAL: Advanced Settings
# ============================================
# Skip health checks (for testing only)
SKIP_HEALTH_CHECK=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum retries for HTTP requests
MAX_RETRIES=4

# Retry backoff base (seconds)
RETRY_BACKOFF=2.0